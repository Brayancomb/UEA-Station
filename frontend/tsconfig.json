{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "interfaces/*": ["src/interfaces/*"],
      "layout/*": ["src/layout/*"],
      "pages/*": ["src/pages/*"],
      "services/*": ["src/services/*"],
      "store/*": ["src/store/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
